---
import DocsSidebar from './DocsSidebar.astro';
import Header from './Header.astro';

const { doc } = Astro.props;
---

<div class="min-h-screen bg-white dark:bg-gray-900">
  <Header />
  <div class="flex">
    <DocsSidebar currentSlug={doc.slug} />
    <main class="flex-1 max-w-4xl mx-auto px-6 py-8">
      <div class="prose prose-lg max-w-none dark:prose-invert">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">{doc.data.title}</h1>
        {doc.data.description && (
          <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">{doc.data.description}</p>
        )}
        <div class="docs-content">
          <slot />
        </div>
      </div>
    </main>
  </div>
</div>

<style>
  .docs-content :global(h2) {
    @apply text-2xl font-semibold text-gray-900 dark:text-white mt-8 mb-4;
  }
  
  .docs-content :global(h3) {
    @apply text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-3;
  }
  
  .docs-content :global(p) {
    @apply text-gray-700 dark:text-gray-300 leading-relaxed mb-4;
  }
  
  .docs-content :global(ul) {
    @apply list-disc list-inside mb-4 space-y-2;
  }
  
  .docs-content :global(ol) {
    @apply list-decimal list-inside mb-4 space-y-2;
  }
  
  .docs-content :global(li) {
    @apply text-gray-700 dark:text-gray-300;
  }
  
  .docs-content :global(code) {
    @apply bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-gray-100 px-2 py-1 rounded text-sm font-mono;
  }
  
  .docs-content :global(pre) {
    @apply bg-gray-900 dark:bg-gray-950 text-gray-100 p-4 rounded-lg overflow-x-auto mb-4;
  }
  
  .docs-content :global(pre code) {
    @apply bg-transparent p-0;
  }
  
  .docs-content :global(blockquote) {
    @apply border-l-4 border-blue-500 pl-4 italic text-gray-600 dark:text-gray-400 my-4;
  }
  
  .docs-content :global(table) {
    @apply w-full border-collapse border border-gray-300 dark:border-gray-600 mb-4;
  }
  
  .docs-content :global(th) {
    @apply border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800 px-4 py-2 text-left font-semibold text-gray-900 dark:text-white;
  }
  
  .docs-content :global(td) {
    @apply border border-gray-300 dark:border-gray-600 px-4 py-2 text-gray-700 dark:text-gray-300;
  }
  
  .docs-content :global(a) {
    @apply text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 underline;
  }
</style>