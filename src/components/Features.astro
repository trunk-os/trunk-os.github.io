---
const features = [
	{
		icon: "☁️",
		title: "Object Storage",
		description:
			"S3-compatible storage that keeps your files safe and accessible. Works with your favorite apps and backup tools.",
	},
	{
		icon: "💻",
		title: "Compute Power",
		description:
			"Run virtual machines and containers for your applications. From personal projects to home automation.",
	},
	{
		icon: "🌐",
		title: "Smart Networking",
		description:
			"Secure connections between your devices with automatic configuration. Access your cloud from anywhere.",
	},
];
---

<section id="features" class="py-20 bg-white dark:bg-gray-800">
  <div class="container-responsive">
    <h2 class="text-4xl font-bold text-center mb-16 animate-fade-up">
      Everything You Need in <span class="gradient-text">One Box</span>
    </h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
      {features.map((feature, index) => (
        <div class={`bg-gray-50 dark:bg-gray-700 p-8 rounded-xl hover:shadow-xl transition-all transform hover:-translate-y-2 animate-fade-up animate-delay-${index * 200}`}>
          <div class="text-5xl mb-4">{feature.icon}</div>
          <h3 class="text-xl font-semibold mb-3 text-trunk-secondary dark:text-white">{feature.title}</h3>
          <p class="text-trunk-dark/70 dark:text-gray-300">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
